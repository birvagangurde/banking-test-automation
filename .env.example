# This file is like a template. You copy it to create your own .env file

# Application URLs - Where is the website we're testing?
BASE_URL=https://parabank.parasoft.com/parabank
API_BASE_URL=https://parabank.parasoft.com/parabank/services/bank

# Test User Credentials - Login details for testing
TEST_USERNAME=john
TEST_PASSWORD=demo

# Browser Settings - Which browser to use?
BROWSER=chrome                  # Options: chrome, firefox, edge
HEADLESS=False                  # False = see browser, True = run in background

# Cloud Testing - BrowserStack login (we'll fill this later)
BROWSERSTACK_USERNAME=your_username
BROWSERSTACK_ACCESS_KEY=your_access_key

# Timeouts - How long to wait for things?
IMPLICIT_WAIT=10               # Wait 10 seconds for elements to appear
EXPLICIT_WAIT=20               # Wait 20 seconds for specific conditions